<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference android:title="Delete Categories"
                android:key="delete-categories">
        <!--<intent android:targetClass="com.example.android.peakfresh.ui.DeleteCategoryDialogAcitivity.class"/>-->
    </Preference>

    <PreferenceCategory
        android:title="Notifications"
        android:key="pref_key_notification_settings">
        <SwitchPreference
            android:key="pref_key_switch"
            android:summary="Activates notifications on your phone"
            android:title="Turn on notifications"
            android:defaultValue="false" />
        <ListPreference
            android:key="pref_key_days_selected"
            android:title="Days Selected"
            android:dialogTitle="Days to be notified"
            android:entries="@array/notification_days"
            android:entryValues="@array/notification_days_values"
            android:defaultValue="0"/>
    </PreferenceCategory>
</PreferenceScreen>